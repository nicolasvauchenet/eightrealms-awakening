{% if this.screen.dialogStep.dialogReplies is defined and this.screen.dialogStep.dialogReplies | length > 0 %}
    <div class="reply-actions">
        {% for reply in this.screen.dialogStep.dialogReplies %}
            {% if not reply.conditions or app_conditionEvaluatorService.isValid(reply.conditions, this.character) %}
                <button class="reply-action" {{ live_action('reply', {replyId: reply.id}) }}>
                    {{ reply.text | raw }}
                </button>
            {% endif %}
        {% endfor %}
    </div>
{% endif %}
